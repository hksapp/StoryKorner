<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroybackground"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/userproflink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/userimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/fab_margin"
                android:src="@drawable/ic_account_circle_white_24dp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#ffffff"
                android:textSize="16sp" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/title_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Story Title"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/story_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="Story....."
                android:textColor="#ffffff"
                android:textSize="18sp"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">

            <ImageButton
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="6dp"
                android:src="@drawable/ic_sentiment_satisfied_white_24dp" />

            <ImageButton
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marigin"
                android:layout_marginRight="@dimen/marigin"
                android:background="@null"
                android:padding="6dp"
                android:src="@drawable/ic_create_white_24dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="6dp"
                android:src="@drawable/ic_file_download_white_24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/user_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="cursive"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/write_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/type_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_weight="4"
                android:text=""
                android:textColor="#ffffff"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/send_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_send_white_24dp"
                android:visibility="gone" />
        </LinearLayout>


        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="timestamp"
            android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>